<html lang="en">
<!-- this is a partial -->
<%- include('./partials/head.ejs') %>

<body>

    <%- include('./partials/nav.ejs') %>

    <div class="blog content">
        <h2>All Blogs</h2>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <h3 class="title"><%= blog.title%></h3>
                <br>
                <p class="snippet"><%= blog.snippet %></p>
                <br><br><br>    
            <% }) %>
        <% } else { %>
            <p>There are No Blogs to Display....</p>
        <% } %>

    </div>
    
    <%- include('./partials/footer.ejs') %>
    
</body>
</html>